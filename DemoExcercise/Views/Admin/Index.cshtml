@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
<h2>User Management</h2>
<a asp-action="Create" class="btn btn-primary">New User</a>
<table class="table">
    <tr>
        <th>Email</th><th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@ViewBag.UserRoles[user.Id]</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>